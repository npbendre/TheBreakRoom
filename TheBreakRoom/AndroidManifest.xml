<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thebreakroom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.thebreakroom.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name="com.example.thebreakroom.GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity><activity
            android:configChanges="orientation"
            android:name="com.example.thebreakroom.UsersListActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity android:name=".AddGroupActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_add_group">
        </activity>
    </application>

</manifest>
